
@{
    ViewData["Title"] = "PaymentHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] PaymentHeader = new string[] { "STT", "Chi tiết", "Tổng", "Phương thức thanh toán", "Ngày thanh toán" };
}
@model List<PaymentHistoryViewModel>

<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <!-- ASIDE -->
            <!-- store products -->
            <div>
                <h2>Lịch sử thanh toán</h2>
                <table class="table table-borderless table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            @{
                                foreach (var head in PaymentHeader)
                                {
                                    <th>
                                        @head

                                    </th>

                                }
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                            if (Model.Count > 0)
                                foreach (var Data in Model)
                                {
                                    <tr>
                                        <td>@(i++)</td>
                                        <td >
                                            <a href="@Url.Action("PaymentDetailHistory","Home",new { id=Data.Id })">Xem chi tiết: </a>
                                        </td>
                                        <td>@Data.Total</td>
                                        <td>@Data.PaymentMethod</td>
                                        <td>@Data.CreatedDate.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    </tr>
                                }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Bạn chưa thanh toán lần nào!!</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /STORE -->
        <!-- /row -->
    </div>
    <!-- /container -->
</div>


